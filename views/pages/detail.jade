extends ../layout
block content
    .container
        .row
            .col-md-7
                input(type="hidden",id="movieFlash",value="#{movie.flash}")
                div#player
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd=movie.title
                    dt 导演
                    dd=movie.doctor
                    dt 国家
                    dd=movie.country
                    dt 语言
                    dd=movie.language
                    dt 上映年份
                    dd=movie.year
                    dt 简介
                    dd=movie.summary

    script(src="/jwplayer/jwplayer.js",type="text/javascript")
    script(type="text/javascript") jwplayer.key="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=";
    script(src="/js/admin.js",type="text/javascript")
